FROM microsoft/mssql-server-linux:2017-latest
ENV SA_PASSWORD=Your_password123
ENV ACCEPT_EULA=Y
COPY ./CodeGenerateDataBase.sql .
RUN  (/opt/mssql/bin/sqlservr --accept-eula & ) | grep -q "Service Broker manager has started" && /opt/mssql-tools/bin/sqlcmd -S 127.0.0.1 -U SA -P "Your_password123" -d master -i CodeGenerateDataBase.sql 
